<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_base_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_green_deep"
    android:orientation="vertical">
    <View
        android:id="@+id/view_new_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="@dimen/dim100"
            android:layout_height="@dimen/dim100"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ibtn_left"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onBtnClick"
            android:text="返回"
            android:textColor="@color/base_white"
            android:textSize="@dimen/txt38"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_left"
            android:layout_width="@dimen/dim100"
            android:layout_height="@dimen/dim100"
            android:layout_centerVertical="true"
            android:onClick="onBtnClick"
            android:src="@mipmap/iv_back_new" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dim400"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/base_white"
            android:textSize="@dimen/txt36" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="@dimen/dim400"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/base_white"
            android:textSize="@dimen/txt30"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_right"
            android:layout_width="@dimen/dim100"
            android:layout_height="@dimen/dim100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onBtnClick"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onBtnClick"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24"
            android:textColor="@color/base_white"
            android:textSize="@dimen/txt32"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim14"
            android:layout_toLeftOf="@+id/btn_right"
            android:drawableLeft="@mipmap/icon_search_grey"
            android:drawablePadding="@dimen/dim8"
            android:hint="@string/searcy_shiti"
            android:imeOptions="actionSearch"
            android:padding="@dimen/dim10"
            android:paddingLeft="@dimen/dim20"
            android:singleLine="true"
            android:textColorHint="@color/base_textcolor_hint"
            android:textColor="@color/base_textcolor_333"
            android:textSize="@dimen/txt32"
            android:visibility="gone"></EditText>

        <ImageButton
            android:id="@+id/ibtn_delete"
            android:layout_width="@dimen/dim100"
            android:layout_height="@dimen/dim100"
            android:layout_alignRight="@+id/ed_search"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:onClick="onBtnClick"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24"
            android:src="@mipmap/btn_delete"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>